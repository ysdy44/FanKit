<Page
    x:Class="FanKit.Frames.Styles.Transitions.ContinuumPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    >

    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition DefaultNavigationTransitionInfo="{StaticResource AppContinuumTransition}"/>
        </TransitionCollection>
    </Page.Transitions>

    <Grid Padding="14" Background="{ThemeResource SystemControlBackgroundAccentBrush}">
        <TextBlock Text="ContinuumNavigationTransitionInfo" Foreground="White" Style="{ThemeResource HeaderTextBlockStyle}"/>
    </Grid>
</Page>