                        </Control:TabButton.Icon>
                    </Control:TabButton>
                    <Control:TabButton Grid.Column="4" Text="History" TabIndex="4" SeletedIndex="{Binding ElementName=TabPivot,Path=SelectedIndex,Mode=TwoWay}">
                        <Control:TabButton.Icon>
                            <FontIcon Glyph="&#xE121;" FontFamily="Segoe UI Symbol"/>
