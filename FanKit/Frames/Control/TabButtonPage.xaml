                        </Control:TabButton.Icon>
                    </Control:TabButton>
                    <Control:TabButton Grid.Column="2" Text="Favor" TabIndex="2" SeletedIndex="{Binding ElementName=TabPivot,Path=SelectedIndex,Mode=TwoWay}">
