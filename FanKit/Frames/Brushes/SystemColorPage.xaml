            </RichTextBlock>
        </ListViewItem >
        
        <ListViewItem  >
            <ListViewItem.Background>
                <SolidColorBrush Color="{StaticResource SystemListAccentHighColor}"/>
            </ListViewItem.Background>
            <RichTextBlock  Style="{StaticResource AppRichTextBlockStyle}">
                <Paragraph>SystemListAccentHighColor</Paragraph>
            </RichTextBlock>
        </ListViewItem >

        <!--#endregion-->

    </ListView>
</Page>