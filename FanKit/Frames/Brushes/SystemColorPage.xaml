        </ListViewHeaderItem>
        <!--#region Border-->

        <ListViewItem  >
            <ListViewItem.Background>
                <SolidColorBrush Color="{StaticResource SystemAccentColor}"/>
            </ListViewItem.Background>
            <RichTextBlock  Style="{StaticResource AppRichTextBlockStyle}">
